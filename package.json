{
  "name": "ceylon-progress",
  "version": "0.0.3",
  "description": "Open source CSS loading animations",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/ceylon-progress/ceylon-progress.esm.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Buddhilive/ceylon-progress.git"
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "publish": "npm publish --access=public"
  },
  "dependencies": {
    "@stencil/core": "^2.13.0",
    "@stencil/sass": "^1.5.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "jest": "^27.4.5",
    "jest-cli": "^27.4.5",
    "puppeteer": "^10.0.0"
  },
  "license": "MIT",
  "keywords": ["progress bar", "loading animation", "progress indicator"]
}
